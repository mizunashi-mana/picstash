{
  "name": "picstash",
  "version": "1.0.0",
  "description": "イラスト画像を管理するための Web アプリケーション",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n core,client,server,ollama -c magenta,blue,green,yellow \"npm:dev:core\" \"npm:dev:client\" \"npm:dev:server\" \"npm:dev:ollama\"",
    "dev:core": "npm run dev -w @picstash/core",
    "dev:client": "npm run dev -w @picstash/web-client",
    "dev:server": "npm run dev -w @picstash/server",
    "dev:ollama": "ollama serve || true",
    "dev:desktop": "concurrently -n core,tauri,server,ollama -c magenta,blue,green,yellow \"npm:dev:core\" \"npm:dev:tauri\" \"npm:dev:server\" \"npm:dev:ollama\"",
    "dev:tauri": "npm run dev -w @picstash/desktop-app",
    "build:desktop": "npm run build -w @picstash/desktop-app",
    "lint": "pre-commit run --all-files && npm run lint:deps",
    "lint:deps": "npm run lint:deps --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "build": "npm run build -w @picstash/core -w @picstash/eslint-config && npm run build -w @picstash/server -w @picstash/web-client",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:e2e": "npm run test:e2e -w @picstash/e2e-test",
    "db:migrate": "npm run db:migrate -w @picstash/server"
  },
  "license": "Apache-2.0 OR MPL-2.0",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
