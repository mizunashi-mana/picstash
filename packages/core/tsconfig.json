{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2022"],
    "types": ["node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@~generated/*": ["./generated/*"],
      "@~tests/*": ["./tests/*"]
    }
  },
  "include": ["src/**/*", "generated/**/*", "*.config.ts", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
