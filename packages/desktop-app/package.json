{
  "name": "@picstash/desktop-app",
  "version": "0.0.1",
  "description": "Picstash Desktop Application",
  "private": true,
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "npm run build:main && electron .",
    "build": "npm run build:main && npm run build:preload",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "package": "npm run build && electron-builder",
    "typecheck": "tsc -p tsconfig.main.json --noEmit && tsc -p tsconfig.preload.json --noEmit",
    "lint": "eslint src *.mjs"
  },
  "devDependencies": {
    "@picstash/eslint-config": "*",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5.8.0"
  }
}
