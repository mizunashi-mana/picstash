{
  "name": "@picstash/desktop-app",
  "version": "0.0.1",
  "description": "Picstash Desktop Application",
  "private": true,
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite -c vite.renderer.config.ts",
    "dev:main": "wait-on http://localhost:5174 && npm run build:main && npm run build:preload && cross-env NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "vite build -c vite.renderer.config.ts",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "esbuild src/preload/index.ts --bundle --platform=node --format=esm --outfile=dist/preload/index.mjs --external:electron",
    "package": "npm run build && electron-builder",
    "typecheck": "tsc -p tsconfig.main.json --noEmit && tsc -p tsconfig.preload.json --noEmit && tsc -p tsconfig.renderer.json --noEmit",
    "lint": "eslint src tests *.mjs playwright.config.ts",
    "test:e2e": "npm run build && playwright test",
    "test:headed": "npm run build && playwright test --headed",
    "test:debug": "npm run build && playwright test --debug"
  },
  "dependencies": {
    "@mantine/charts": "^8.3.13",
    "@mantine/core": "^8.3.13",
    "@mantine/dropzone": "^8.3.13",
    "@mantine/hooks": "^8.3.13",
    "@mantine/notifications": "^8.3.13",
    "@picstash/api": "*",
    "@tabler/icons-react": "^3.36.1",
    "@tanstack/react-query": "^5.80.7",
    "@tanstack/react-virtual": "^3.13.18",
    "qs": "^6.14.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.12.0",
    "recharts": "^3.6.0"
  },
  "devDependencies": {
    "@picstash/eslint-config": "*",
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.15.21",
    "@types/qs": "^6.14.0",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^5.1.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "esbuild": "^0.25.0",
    "typescript": "^5.8.0",
    "vite": "^7.0.4",
    "wait-on": "^8.0.3"
  }
}
