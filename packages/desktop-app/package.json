{
  "name": "@picstash/desktop-app",
  "version": "0.0.1",
  "description": "Picstash Desktop Application",
  "author": {
    "name": "mizunashi-mana",
    "email": "contact@mizunashi.work"
  },
  "homepage": "https://github.com/mizunashi-mana/picstash",
  "private": true,
  "main": "dist/main/index.js",
  "exports": {
    ".": "./dist/main/index.js",
    "./shared/*": "./dist/shared/*",
    "./package.json": "./package.json"
  },
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite -c vite.renderer.config.ts",
    "dev:main": "wait-on http://localhost:5174 && npm run build:main && npm run build:preload && cross-env NODE_ENV=development electron . --remote-debugging-port=9222",
    "db:generate": "prisma generate",
    "build": "npm run db:generate && npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "vite build -c vite.renderer.config.ts",
    "build:main": "npx tsx esbuild.config.ts main",
    "build:preload": "npx tsx esbuild.config.ts preload",
    "package": "npm run build && electron-builder",
    "typecheck": "tsc -p tsconfig.main.json --noEmit && tsc -p tsconfig.preload.json --noEmit && tsc -p tsconfig.renderer.json --noEmit && tsc -p tsconfig.tools.json --noEmit",
    "lint": "eslint src tests .storybook *.mjs playwright.config.ts esbuild.config.ts vitest.config.ts",
    "lint:deps": "depcruise src --config .dependency-cruiser.mjs",
    "test": "vitest run --project unit",
    "test:watch": "vitest --project unit",
    "test:storybook": "vitest run --project storybook",
    "test:e2e": "npm run build && playwright test",
    "test:headed": "npm run build && playwright test --headed",
    "test:debug": "npm run build && playwright test --debug",
    "storybook": "storybook dev -p 6007",
    "build:storybook": "storybook build"
  },
  "dependencies": {
    "@mantine/charts": "^8.3.13",
    "@mantine/core": "^8.3.13",
    "@mantine/dropzone": "^8.3.13",
    "@mantine/hooks": "^8.3.13",
    "@mantine/notifications": "^8.3.13",
    "@picstash/api": "*",
    "@picstash/core": "*",
    "@prisma/adapter-better-sqlite3": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@tabler/icons-react": "^3.36.1",
    "@tanstack/react-query": "^5.80.7",
    "@tanstack/react-virtual": "^3.13.18",
    "better-sqlite3": "^12.5.0",
    "inversify": "^7.11.0",
    "qs": "^6.14.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.12.0",
    "recharts": "^3.6.0",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.34.5",
    "sqlite-vec": "^0.1.7-alpha.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@picstash/eslint-config": "*",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@swc/core": "^1.15.11",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.21",
    "@types/qs": "^6.14.0",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "^4.0.16",
    "@vitest/browser-playwright": "^4.0.16",
    "babel-plugin-react-compiler": "^1.0.0",
    "concurrently": "^9.1.2",
    "cross-env": "^10.1.0",
    "dependency-cruiser": "^17.3.6",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "esbuild": "^0.27.2",
    "playwright": "^1.57.0",
    "prisma": "^7.2.0",
    "prisma-lint": "^0.13.1",
    "storybook": "^10.1.11",
    "tsx": "^4.19.4",
    "typescript": "^5.8.0",
    "vite": "^7.0.4",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  }
}
