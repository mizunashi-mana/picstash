{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@desktop-app/main/*": ["src/main/*"],
      "@desktop-app/shared/*": ["src/shared/*"],
      "@~generated/*": ["generated/*"]
    }
  },
  "include": ["src/main/**/*", "src/shared/**/*", "generated/**/*"]
}
