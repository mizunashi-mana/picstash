{
  "permissions": {
    "allow": [
      "Bash(npx tsc --noEmit)",
      "Bash(npx prisma:*)",
      "Bash(./scripts/run-script.mjs:*)",
      "Bash(npm run lint:check:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run build:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm run lint:eslint:*)",
      "Bash(npm run lint:deps:*)",
      "Bash(npm run test:*)",
      "Bash(npm run test:coverage:*)",
      "Bash(npm run lint:prisma:*)",
      "Bash(npm run db:migrate:*)",
      "Bash(npm run db:generate:*)",
      "Bash(npm run dev:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "playwright"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "^(Write|MultiEdit|Edit|Update)$",
        "hooks": [
          {
            "type": "command",
            "command": "cc-edit-lint-hook"
          }
        ]
      }
    ]
  }
}
